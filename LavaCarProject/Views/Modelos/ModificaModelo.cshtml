@model LavaCarProject.Models.sp_RetornaMarca_ID_Result
@{
    ViewBag.Title = "ModificaModelo";
}

<h2>Modificar Modelo</h2>

<form class="form" method="post">
    <div class="form-group">
        <label>Nombre marca:</label>
        <input class="form-control" type="text" name="nmarca" id="nmarca" value="@Model.nombre_marca" />
    </div>
    <div class="form-group">
        <label>Fabricante :</label>
        <select name="fabricante" id="fabricante" class="form-control">
            <option value="">Seleccione un Fabricante:</option>
            @{
                foreach (LavaCarProject.Models.sp_RetornaFabricantes_Result fabricante
                    in this.ViewBag.ListaFabricantes)


                {
                    bool esIdFabricanteModelo = fabricante.id_fabricante == Model.id_fabricante;

                    if (esIdFabricanteModelo)
                    {
                        <option value="@fabricante.id_fabricante" selected>@fabricante.nombre_pais</option>
                    }
                    else
                    {
                        <option value="@fabricante.id_fabricante">@fabricante.nombre_fabricante</option>
                    }
                }
            }
        </select>
    </div>

    <div class="form-group" role="button">
        <input class="btn btn-danger" type="submit" value="Modificar" id="btninsertar" />
    </div>
</form>
<a href="~/Modelos/Modelos" class="btn btn-info" role="button"> Regresar </a>
