@model List<LavaCarProject.Models.sp_Retorna_Vehiculos_sin_Cliente_Result>
@{
    ViewBag.Title = "AsignarVehiculos";
}

<h2>Asignar Vehículo</h2>

<div id="divAsignarr">

    <form class="form" id="fmrAsignarVehic" method="POST">

        <div class="form-group">
            <label>Placa:</label>
            <input type="text" name="placa" id="placa" class="form-control" value="@Model.placa">
        </div>

        <div class="form-group">
            <label>Cliente:</label>
            <select name="cliente" id="cliente" class="form-control">
                <option value="">Favor seleccione un Cliente</option>
                @{
                    foreach (LavaCarProject.Models.sp_RetornaCliente_ID_Result cliente in this.ViewBag.Cliente)
                    {
                        <option value="@cliente.id_cliente">@cliente.nombre_cliente @cliente.apellido1</option>
                    }
                }
            </select>

        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" id="btninsertar" />
        </div>
        <div>
            <a href="~/Vehiculos/VehiculosLibres">Regresar</a>
        </div>
    </form>
</div>
