@model LavaCarProject.Models.sp_RetornaVehiculo_ID_Result
@{
    ViewBag.Title = "ModificaVehiculo";
}

@section Style{
    <link rel="stylesheet" href=" https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <link href="https://kendo.cdn.telerik.com/2020.2.617/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2020.2.617/styles/kendo.blueopal.min.css" rel="stylesheet" />
}

<h2>Modificar Vehículos</h2>
<div id="divModificar" >

    <form class="form" id="fmrmodificavehiculo" method="POST">
        <input type="text" name="id_fabricante_vehiculo"id="id_fabricante_vehiculo" hidden value="@Model.id_fabricante_vehiculo" />
        <div class="form-group">
            <br />
            <label>Marca:</label>
            <select name="id_marca_select" id="id_marca_select" class="form-control" >
                
                <option value="">Seleccione una Marca</option>
                @{
                    foreach (LavaCarProject.Models.sp_RetornaListaMarca_Result marca in this.ViewBag.Listamarcas)
                    {
                        bool MarcaID = marca.id_marca == Model.id_marca;
                        if (MarcaID)
                        {
                            <option value="@marca.id_marca" selected>@marca.nombre_marca</option>
                        }
                        else
                        {
                            <option value="@marca.id_marca"> @marca.nombre_marca </option>
                        }
                    }
                }
            </select>
        </div>

        <div class="form-group">
            <label>Modelo:</label>
            <select name="id_modelo_vehiculo" id="id_modelo_vehiculo" class="form-control">
                <option value="">Seleccione un Modelo</option>
                @{
                    foreach (LavaCarProject.Models.sp_RetornaModelo_Result modelo in this.ViewBag.Listamodelos)
                    {
                        bool ModeloID = modelo.id_modelo == Model.id_modelo_vehiculo;
                        if (ModeloID)
                        {
                            <option value="@modelo.id_modelo" selected>@modelo.nombre_modelo</option>
                        }
                        else
                        {
                            <option value="@modelo.id_modelo"> @modelo.nombre_modelo </option>
                        }
                    }
                }
            </select>
        </div>

        <div class="form-group">
            <label>Cantidad de Puertas:</label>
            <input type="text" name="cantidad_puertas" id="cantidad_puertas" class="form-control" value="@Model.cantidad_puertas">
        </div>
        <div class="form-group">
            <label>Cantidad de ruedas:</label>
            <input type="text" name="cantidad_ruedas" id="cantidad_ruedas" class="form-control" value="@Model.cantidad_ruedas">
        </div>

        <div class="form-group">
            <label>Tipo Vehículo:</label>
            <select name="id_tipo_vehiculo" id="id_tipo_vehiculo" class="form-control">
                <option value="">Seleccione un Tipo de Vehículo</option>
                @{
                    foreach (LavaCarProject.Models.sp_RetornaTipoVehiculo_Result tipovh in this.ViewBag.Listatipovehiculo)
                    {
                        bool TipoVhID = tipovh.id_tipo_vehiculo == Model.id_tipo_vehiculo;
                        if (TipoVhID)
                        {
                            <option value="@tipovh.id_tipo_vehiculo" selected>@tipovh.nombre_vehiculo</option>
                        }
                        else
                        {
                            <option value="@tipovh.id_tipo_vehiculo"> @tipovh.nombre_vehiculo </option>
                        }
                    }
                }
            </select>
        </div>

        <div class="form-group">
            <label>Número de placa:</label>
            <input type="text" name="placa" id="placa" class="form-control" value="@Model.placa">
        </div>

        <div class="form-group">
            <label for="anio">Año de Fabricación: </label>
            <input  type="text" name="año_fabricacion" id="año_fabricacion" value="@Model.año_fabricacion" />
        </div>

        <div class="form-group">
            <input class="btn btn-danger" type="submit" value="Modificar" id="btninsertar" />
        </div>
        <a href="~/Vehiculos/Vehiculos" class="btn btn-info" role="button"> Regresar </a>
    </form>
</div>
@section scripts{
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous"></script>
    <script src="https://kendo.cdn.telerik.com/2020.2.617/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.2.617/js/jszip.min.js"></script>
    <script src="~/Scripts/ScriptGenerico.js"></script>
    <script src="~/Scripts/Kendo_JQ_UI/VehiculoModifica.js"></script>
    <script src="~/Scripts/Kendo_JQ_UI/Vehiculos.js"></script>
}
